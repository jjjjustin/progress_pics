<div ng-app='app'>
    <div ng-controller="PhotoCtrl">
    <div class="progress-bar">
        <p>Progress Bar area</p>
        <ul>
            <li>Step 1 - Before Photo</li>
            <li>Step 2 - After Photo</li>
            <li>Step 3 - Share</li>
        </ul>
    </div>

    <div class="instructions">Take a "before" photo (or upload existing)</div>

    <div class="before-options" ng-if="showPicOptions">
        <button class="take-photo-option" ng-click="takePhotoEnabled()">Take Photo</button>

        <label class="custom-file-upload">
            <input type="file"/>
            Upload existing
        </label>
    </div>


     <div class="shutter-container" ng-hide="hidePicTaker || vm.picture">
        <ng-camera
            capture-message="Success!"
            countdown="1"
            output-height="320"
            output-width="416"
            viewer-height="auto"
            viewer-width="auto"
            image-format="jpeg, png"
            jpeg-quality="100"
            action-message="Take picture"
            snapshot="vm.picture"
            flash-fallback-url="/vendors/webcamjs/webcam.swf">
        </ng-camera>
      </div>

      <div class="draft-image-container" ng-show="vm.picture && showShutter">
        <img ng-src="{{vm.picture}}" alt="draft picture">
        <button class="tryAgain" ng-click="vm.picture = !vm.picture">Try Again</button>
        <button class="accept" ng-click="showCaption()">Accept</button>
      </div>

      <div class="image-save" ng-show="showIt">
          <figure class="image-with-caption">
            <img ng-src="{{vm.picture}}" alt="caption picture">
            <figcaption>
                <p class="day">Day 1</p>
                <p class="date">{{date | date:'mediumDate'}}</p>
            </figcaption>
          </figure>
          <div class="image-save-buttons">
              <button class="go-to-after" ng-click="addAfterPhoto()">Save and add my "after" photo now</button>
                <p>or</p>
              <button class="save-and-set" ng-click="setReminder = true">Save and add my "after" photo later</button>
          </div>
      </div>
      <div class="set-reminder" ng-show="setReminder">
        <p>How many days til your "after" photo?</p>
        <select>
            <option value="7">In 7 days</option>
            <option value="14">In 14 days</option>
            <option value="30">In 30 days</option>
            <option value="60">In 60 days</option>
            <option value="90">In 90 days</option>
        </select>
        <p>How should we remind you?</p>
        <select>
            <option value="email">Via email</option>
            <option value="text">Via text message</option>
            <option value="both">Both email and text</option>
        </select>
      </div>
     <div class="shutter-container" ng-if="afterPhoto">
        <ng-camera
            capture-message="Success!"
            countdown="1"
            output-height="320"
            output-width="416"
            viewer-height="auto"
            viewer-width="auto"
            image-format="jpeg, png"
            jpeg-quality="100"
            action-message="Take a damn picture"
            snapshot="afterPhoto"
            flash-fallback-url="/vendors/webcamjs/webcam.swf">
        </ng-camera>
      </div>
    </div> <!-- Closes controller div -->
</div>  <!-- Closes ng-app div -->


